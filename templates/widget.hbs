<!doctype html>
<!--[if lt IE 9]><html class="lt-ie9 ie"><![endif]-->
<!--[if IE 9]><html class="ie"><![endif]-->
<!--[if gt IE 9]><html lang="en"><![endif]-->
  <head>
    <base target="_self">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Referral SaaSquatch Dollar Credit Theme</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,700">
    <link rel="stylesheet" href="{{assets 'css/widget.css'}}">

    {{> theme_messages}}
    {{squatchHead}}
    <script src="{{assets 'libs/mobile-detect.min.js'}}"></script>
    <script src="{{assets 'javascript/base.js'}}"></script>
    <script src="{{assets 'javascript/events.js'}}"></script>

    <!--[if lt IE 9]>
      <script src="{{assets 'libs/bind-polyfill.js'}}"></script>
      <script src="{{assets 'libs/html5shiv-printshiv.min.js'}}"></script>
    <![endif]-->

    <!--[if lte IE 9]>
      <script src="{{assets 'libs/matchMedia.js'}}"></script>
      <script src="{{assets 'libs/matchMedia.addListener.js'}}"></script>
    <![endif]-->

   <style>
      .squatch-container .squatch-title {
        color: {{variables 'widget.REFERRER_WIDGET.content.widgetCustomization.headerColor'}};
      }
      body .squatch-container {
        font-family: {{variables 'widget.REFERRER_WIDGET.content.widgetCustomization.widgetFont'}};
      }
    </style>
  </head>

  <body>
    <main class="squatch-container squatch-container-{{lower mode}}">
      <img class="squatch-present" src="https://res.cloudinary.com/saasquatch/image/upload/v1541468180/GiftBox-FoundationCenter_wxost0.png">
      <div class="squatch-inner-container">
        <div class="squatch-body">
          <div>
            <img class="squatch-fdo-logo" src="https://res.cloudinary.com/saasquatch/image/upload/v1554148185/tenant_az2fza9sxr1l5/FDObyC_1.png" alt="Foundation Directory Online">
          </div>
          {{> title}}

          <button class="close squatch-header-close" data-close-panel="#squatch-panel">x</button>

          {{> lead}}
          {{> cta}}
          {{> share}}
        </div>

        {{#if variables.widget.REFERRER_WIDGET.content.widgetCustomization.registrationFields.email}}
          {{#if variables.widget.REFERRER_WIDGET.content.widgetCustomization.registrationFields.firstName}}
            {{#if variables.widget.REFERRER_WIDGET.content.widgetCustomization.registrationFields.lastName}}
              {{#if user.email}}
                {{#if user.firstName}}
                  {{#if user.lastName}}
                    {{> _squatch-panel}}
                  {{else}} {{> _squatch-form}} {{/if}}
                {{else}} {{> _squatch-form}} {{/if}}
              {{else}} {{> _squatch-form}} {{/if}}
            {{else}}
              {{#if user.email}}
                {{#if user.firstName}}
                  {{> _squatch-panel}}
                {{else}} {{> _squatch-form}} {{/if}}
              {{else}} {{> _squatch-form}} {{/if}}
            {{/if}}
          {{else}}
            {{#if user.email}}
              {{> _squatch-panel}}
            {{else}} {{> _squatch-form}} {{/if}}
          {{/if}}
        {{else}}
          {{#if variables.widget.REFERRER_WIDGET.content.widgetCustomization.registrationFields.firstName}}
            {{#if variables.widget.REFERRER_WIDGET.content.widgetCustomization.registrationFields.lastName}}
              {{#if user.firstName}}
                {{#if user.lastName}}
                  {{> _squatch-panel}}
                {{else}} {{> _squatch-form}} {{/if}}
              {{else}} {{> _squatch-form}} {{/if}}
            {{else}}
              {{#if user.firstName}}
                {{> _squatch-panel}}
              {{else}} {{> _squatch-form}} {{/if}}
            {{/if}}
          {{else}}
            {{#if variables.widget.REFERRER_WIDGET.content.widgetCustomization.registrationFields.lastName}}
              {{#if user.lastName}}
                {{> _squatch-panel}}
              {{else}} {{> _squatch-form}} {{/if}}
            {{else}} {{> _squatch-panel}} {{/if}}
          {{/if}}
        {{/if}}
      </div>
    </main>

    <div id="cta">
      {{> cta-widget cta=(variables-object 'widget.REFERRER_WIDGET.cta')}}
    </div>



    <script src="{{assets 'libs/ready.min.js'}}"></script>
    <script src="{{assets 'libs/clipboard.min.js'}}"></script>
    <script src="{{assets 'libs/moment.min.js'}}"></script>
    <script src="{{assets 'javascript/widget.js'}}"></script>
  </body>
</html>
